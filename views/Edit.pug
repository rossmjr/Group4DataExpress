extends layout

block content
    div(id="editinput")
        p edit
        form(id='form', method='post', action='/edit/' + person.id)
            label(for='userName') Username: 
            input(type='text', name="userName", class="createForm", required placeholder="Enter username...", value=person.userName)
            br
            br
            label(for='pass') Password: 
            input(type='text', name='pass', class="createForm", required placeholder="Enter password...")
            br
            br
            label(for='email') Email: 
            input(type='text', name='email', class="createForm", required placeholder="example@netscape.com", value=person.email)
            br
            br
            label(for='age') Age: 
            input(type='text', name='age', class="createForm", required placeholder="Enter age...", value=person.age)
            br
            br
            p(id='instruction') Please select an answer for ALL questions.
            br
            label(for='answer1') What is your favorite pizza topping? 
            select(name='answer1', class='createForm')
                option(value='filler', disabled='disabled', selected) Choose One
                option(value='(A) Pepperoni') (A) Pepperoni
                option(value='(B) Mushrooms') (B) Mushrooms
                option(value='(C) Anchovies') (C) Anchovies
                option(value='(D) Sausage') (D) Sausage
                option(value='(E) Cheese') (E) Cheese
            br
            br
            label(for='answer2') How likely are you to return to this website? 
            br
            select(name='answer2', class='createForm')  
                option(value='filler', disabled='disabled', selected) Choose One
                option(value='1') 1
                option(value='2') 2
                option(value='3') 3
                option(value='4') 4
                option(value='5') 5   
            br
            br
            label(for='answer3') What is your favorite sport? 
            br
            select(name='answer3', class='createForm')   
                option(value='filler', disabled='disabled', selected) Choose One
                option(value='(A) Soccer') (A) Soccer
                option(value='(B) Football') (B) Football
                option(value='(C) Baseball') (C) Baseball
                option(value='(D) Hockey') (D) Hockey
                option(value='(E) Basketball') (E) Basketball
            br
            br
            input(type='submit', value='Edit User', class='subBut')
    
